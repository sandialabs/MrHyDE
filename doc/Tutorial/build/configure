EXTRA_ARGS=$@

rm CMakeCache.txt
rm -rf CMakeFiles/

TRILINOS_HOME='/ascldap/users/jnneube/PROJECTS/Trilinos'

TRILINOS_INSTALL='/ascldap/users/jnneube/PROJECTS/Trilinos/install-clang'

EXERCISES_HOME='/ascldap/users/jnneube/PROJECTS/MrHyDE/doc/Tutorial/Exercises'


cmake \
-G Ninja \
-D Trilinos_SRC_DIR=${TRILINOS_HOME} \
-D Trilinos_INSTALL_DIR=${TRILINOS_INSTALL} \
-D CMAKE_CXX_FLAGS:STRING="-Wall" \
-D CMAKE_CXX_EXTENSIONS=Off \
${EXTRA-ARGS} \
${EXERCISES_HOME}
